{% if datax %}
  <script>
    function createSec(s) {
      var ht='<figure>';
      ht +=`<figcaption> ${s.comment} </figcaption> `; 
      ht +=`<img  src="${s.chartpath}" > `; 
      ht +='</figure>'
      return ht;
    }
    var datax={{datax|safe}};

    var secD={};
    var tmp = Object.entries(datax).filter(function(x){
      if(typeof x[1]=='object') {
        ht =createSec(x[1]);
        $('#'+x[0]).html(ht);
        secD[x[0]]=x[1] ;
      }
    })


  </script>
{% endif %}
