<script>
  function hideShow(s) {
    $('#overviewSec').toggle();
    if ($('#sec_hideShow span').attr('class')=="glyphicon glyphicon-plus")
      $('#sec_hideShow span').attr('class',"glyphicon glyphicon-minus") ;
    else
      $('#sec_hideShow span').attr('class',"glyphicon glyphicon-plus") ;
    return false;
   }
</script>
